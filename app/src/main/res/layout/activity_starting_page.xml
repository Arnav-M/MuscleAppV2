<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editTextTextMultiLine5"
        android:layout_width="371dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Step 3: View your results in real time"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <TextView
        android:id="@+id/editTextTextMultiLine4"
        android:layout_width="371dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Step 2: Calibrate the device by being at rest"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#000004"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="MuscleApp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="370dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="6dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="How to use the app:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="371dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Step 1: Connect to Bluetooth"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="371dp"
        android:layout_height="71dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="308dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Click Advance below to start Bluetooth connection"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/advance"
        android:layout_width="146dp"
        android:layout_height="69dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="194dp"
        android:text="Advance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>